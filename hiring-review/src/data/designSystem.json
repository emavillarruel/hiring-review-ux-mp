{
  "designSystem": {
    "name": "Hiring Review Design System",
    "version": "1.0",
    "inspiration": {
      "ui": "Mercado Pago/Mercado Libre brand",
      "interactions": "HEAVN One - https://heavn-one.webflow.io/"
    }
  },
  "colors": {
    "primary": {
      "yellow": "#FFF200",
      "yellowDark": "#FFE600",
      "yellowLight": "#FFFB99"
    },
    "neutral": {
      "white": "#FFFFFF",
      "background": "#F5F5F5",
      "backgroundWarm": "#FFF9E6",
      "gray100": "#F7F7F7",
      "gray200": "#E5E5E5",
      "gray300": "#D4D4D4",
      "gray400": "#A3A3A3",
      "gray500": "#737373",
      "gray600": "#525252",
      "gray700": "#404040",
      "gray800": "#262626",
      "gray900": "#171717"
    },
    "semantic": {
      "success": "#00A650",
      "info": "#009EE3",
      "warning": "#F7B500",
      "error": "#F23D4F"
    },
    "states": {
      "completed": "#00A650",
      "current": "#009EE3",
      "pending": "#A3A3A3",
      "disabled": "#D4D4D4"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "fallback": "system-ui, sans-serif"
    },
    "scale": {
      "h1": {
        "size": "3rem",
        "weight": 700,
        "lineHeight": 1.2,
        "letterSpacing": "-0.02em"
      },
      "h2": {
        "size": "2.25rem",
        "weight": 600,
        "lineHeight": 1.3,
        "letterSpacing": "-0.01em"
      },
      "h3": {
        "size": "1.5rem",
        "weight": 600,
        "lineHeight": 1.4,
        "letterSpacing": "0"
      },
      "body": {
        "size": "1rem",
        "weight": 400,
        "lineHeight": 1.6,
        "letterSpacing": "0"
      },
      "bodyLarge": {
        "size": "1.125rem",
        "weight": 400,
        "lineHeight": 1.6,
        "letterSpacing": "0"
      },
      "small": {
        "size": "0.875rem",
        "weight": 400,
        "lineHeight": 1.5,
        "letterSpacing": "0"
      },
      "caption": {
        "size": "0.75rem",
        "weight": 500,
        "lineHeight": 1.4,
        "letterSpacing": "0.02em"
      }
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem"
  },
  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms",
      "verySlow": "800ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "smooth": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    }
  },
  "microinteractions": {
    "stepper": {
      "lineProgress": {
        "animation": "progress-fill",
        "duration": "800ms",
        "easing": "smooth",
        "description": "La línea de progreso se llena suavemente de izquierda a derecha"
      },
      "stepCircle": {
        "idle": {
          "scale": 1,
          "opacity": 0.6
        },
        "hover": {
          "scale": 1.1,
          "opacity": 1,
          "duration": "150ms",
          "easing": "out"
        },
        "active": {
          "scale": 1.2,
          "pulse": true,
          "duration": "1500ms",
          "description": "El paso actual tiene un pulso suave y continuo"
        },
        "completed": {
          "checkmark": {
            "animation": "draw-check",
            "duration": "400ms",
            "easing": "bounce"
          }
        }
      },
      "cardReveal": {
        "animation": "fade-slide-up",
        "duration": "500ms",
        "easing": "smooth",
        "translateY": "20px to 0",
        "opacity": "0 to 1",
        "description": "Las cards de información aparecen desde abajo con fade"
      },
      "progressBar": {
        "animation": "width-transition",
        "duration": "800ms",
        "easing": "smooth",
        "description": "Barra de progreso superior crece suavemente"
      }
    },
    "buttons": {
      "hover": {
        "transform": "translateY(-2px)",
        "shadow": "lg",
        "duration": "150ms"
      },
      "active": {
        "transform": "scale(0.98)",
        "duration": "100ms"
      }
    },
    "cards": {
      "hover": {
        "shadow": "xl",
        "transform": "translateY(-4px)",
        "duration": "300ms"
      }
    },
    "icons": {
      "entrance": {
        "animation": "scale-fade-in",
        "duration": "300ms",
        "easing": "bounce",
        "description": "Los iconos aparecen con un pequeño bounce"
      }
    }
  },
  "components": {
    "stepper": {
      "lineHeight": "2px",
      "circleSize": "48px",
      "circleSizeSmall": "32px",
      "spacing": "auto",
      "iconSize": "24px"
    },
    "card": {
      "padding": "2rem",
      "borderRadius": "xl",
      "background": "white",
      "shadow": "md",
      "hoverShadow": "xl"
    },
    "progressBar": {
      "height": "4px",
      "borderRadius": "full",
      "background": "gray200",
      "fill": "primary.yellow"
    }
  },
  "breakpoints": {
    "mobile": "0px",
    "tablet": "768px",
    "desktop": "992px",
    "wide": "1200px"
  },
  "principles": {
    "smoothTransitions": "Todas las transiciones deben ser suaves y naturales, inspiradas en Lenis scroll",
    "progressiveFeedback": "El usuario debe recibir feedback visual inmediato en cada interacción",
    "delightfulDetails": "Agregar pequeños detalles que sorprendan (confetti en oferta, pulse en paso actual)",
    "clarity": "La información debe ser clara y fácil de entender, sin distracciones",
    "accessibility": "Todos los estados deben ser distinguibles por color, forma y texto"
  }
}
